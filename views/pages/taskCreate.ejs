    <div class="form-create">
        <h2 style="font-weight: bolder;">Create Assignment</h2>
        <form action="" method="post">
            <div class="form-part">
                <label width="150" required="true">Assignment Name</label>
                <input class="form-input" name="TName" id="name" type="text" placeholder="Please Fill Me" style="color: black;" autofocus required>
            </div>
            <div class="form-part">
                <label width="150">Assignment Description</label>
                <textarea class="form-input" name="desc" id="desc" rows="6" cols="70" placeholder="Type Something For Your Student" style="color: black;"></textarea>
            </div>
            <div class="form-part">
                <label width="150">Due Date</label>
                <input class="form-input" name="date" id="date" type="date" style="color: black;" required>
            </div>
            <div class="form-part">
                <label width="150">Upload File</label>
                <input class="form-input" name="file" id="file" type="file">
            </div>
            <div class="form-part">
                <input class="btn btn-success" type="submit" value="Submit" id="buttonSubmit" onpointermove="dueDate()">
                <input class="btn btn-danger" type="reset" value="Cancel">
            </div>
        </form>
    </div>